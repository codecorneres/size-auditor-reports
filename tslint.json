{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "variable-name": [
      true,
      "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case",  "allow-trailing-underscore"
    ],
    "ordered-imports": [false],
    "no-unused-variable": false,
    "jsx-boolean-value": [
      "never"
    ],
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "member-access": [true],
    "only-arrow-functions": false,
    "no-console": false
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "no-console": false
  }
}
